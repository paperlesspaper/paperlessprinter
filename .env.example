# Server
IPP_LISTEN_HOST=0.0.0.0
IPP_LISTEN_PORT=8631
IPP_PATH=/ipp/print
IPP_MAX_BYTES=104857600
IPP_SPOOL_DIR=./spool
IPP_RENDER_DPI=150
IPP_TEMP_DIR=./temp

# Logging
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# If true, logs request headers (Authorization/Cookie are redacted)
LOG_HEADERS=false

# Outbound POST
# Leave POST_ENDPOINT empty to disable uploading (store-only mode)
# For PaperlessPaper you can template the endpoint with:
#   <paperId>  or  {PAPER_ID}  or  {paper_id}
# and provide the value via PAPER_ID or via the /ipp/print URL (paper_id=...)
POST_ENDPOINT=

# Optional default paper id used to fill POST_ENDPOINT templates.
# Can be overridden per request via:
#   /ipp/print?paper_id=123
#   /ipp/print/123
PAPER_ID=

POST_AUTH_HEADER=x-api-key
POST_AUTH_VALUE=REPLACE_ME
POST_TIMEOUT_SECONDS=30

# Multipart form field name for the PNG file
# (set to "picture" for the /uploadSingleImage/... endpoint)
POST_FILE_FIELD=file

# If false, only the PNG file is sent (no extra form fields)
POST_INCLUDE_META_FIELDS=true

# Optional: shared secret expected from clients (basic protection if you expose directly)
# If set, requests must include header: X-IPP-Token: <value>
IPP_SHARED_TOKEN=
